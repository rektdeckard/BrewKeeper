        <!--<item name="colorSecondary">@color/colorSecondary</item>-->
        <!--<item name="colorSecondaryVariant">@color/secondaryVariant</item>-->
        <!--<item name="colorOnSecondary">@color/onSecondary</item>-->
        <!--<item name="colorSurface">@color/surface</item>-->
        <!--<item name="colorOnSurface">@color/onSurface</item>-->
        <!--<item name="colorError">@color/error</item>-->
        <!--<item name="colorOnError">@color/onError</item>-->
        <!--<item name="colorButtonNormal">@color/buttonNormal</item>-->
        <!--<item name="colorControlNormal">@color/controlNormal</item>-->
        <!--<item name="colorControlActivated">@color/controlActivated</item>-->
        <!--<item name="colorControlHighlight">@color/controlHighlight</item>-->
        <!--<item name="colorBackgroundFloating">@color/backgroundFloating</item>-->

    </style>

    <style name="AppTheme.Color" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- BUTTONS -->
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_buttons</item>
        <item name="android:textColor">@color/color_states_button_text</item>
    </style>

    <!-- CARDS -->
    <style name="CardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    <style name="ListCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">40dp</item>
    </style>
    <style name="CardStyle.History" parent="@style/CardStyle">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- CHIPS -->
    <style name="ChipStyle" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:typeface">@font/google_sans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStrokeColor">@color/color_states_chips</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke_width</item>
        <item name="android:textColor">@color/color_states_chip_text</item>
        <item name="chipBackgroundColor">@color/color_states_chips</item>

    </style>

    <!-- DIVIDERS -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <!-- PIPS -->
    <style name="PipStyle">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/tl_pips</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="ProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!--<item name="android:progressTint">@color/color_states_progress</item>-->
        <!--<item name="android:secondaryProgressTint">@color/colorPrimary</item>-->
        <!--<item name="android:progressBackgroundTint">@color/colorPrimaryLight</item>-->
        <!--<item name="android:background">@color/colorPrimaryLight</item>-->
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="MainTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <!-- TAB BAR -->
    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TabStyle</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorWhiteThin</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- TOOLBAR -->
    <style name="ToolbarStyle">
        <item name="android:background">@color/background</item>
        <item name="android:actionBarDivider">@android:color/transparent</item>
    </style>

