<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EntryActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/brew_name_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_row_height"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/transparent"
                android:inputType="textCapWords"
                android:hint="@string/brew_name"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/entry_left_margin"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_milestone_filled" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_fermentation"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/primary_date_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        tools:text="February 22, 2019"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/tea_name_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/single_row_height"
                        android:paddingStart="@dimen/entry_left_margin"
                        android:paddingEnd="@dimen/single_row_height"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/tea_name"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tea_picker"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/single_row_height"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/entry_left_margin"
                        android:paddingEnd="@dimen/single_row_height"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/tea_type"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp">

                    <EditText
                        android:id="@+id/tea_amount_picker"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="0dp"
                        android:paddingEnd="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="number"
                        android:text="@string/default_amount_sweetener"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/text_size"
                        android:maxLength="3"/>

                    <TextView
                        android:id="@+id/unit_suffix2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:text="@string/unit_grams"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/text_size"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_row_height"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sugar_picker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/entry_left_margin"
                    android:paddingEnd="@dimen/single_row_height"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/sweetener_white_sugar"
                    android:textSize="@dimen/text_size" />

                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp">

                    <EditText
                        android:id="@+id/sugar_amount_picker"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="0dp"
                        android:paddingEnd="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="number"
                        android:text="@string/default_amount_sweetener"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorDarkGray"
                        android:textAlignment="textEnd"
                        android:maxLength="3"/>

                    <TextView
                        android:id="@+id/unit_suffix1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:text="@string/unit_grams"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorDarkGray"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/entry_left_margin"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_milestone"
                    android:contentDescription="@string/timeline_marker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/second_fermentation"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/secondary_date_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size"
                        tools:text="March 3, 2019" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_row_height"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sugar_picker_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/entry_left_margin"
                    android:paddingEnd="@dimen/single_row_height"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/sweetener_white_sugar"
                    android:textSize="@dimen/text_size" />

                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp">

                    <EditText
                        android:id="@+id/sugar_amount_picker_2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="0dp"
                        android:paddingEnd="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="number"
                        android:text="@string/default_amount_sweetener"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorDarkGray"
                        android:textAlignment="textEnd"
                        android:maxLength="3"/>

                    <TextView
                        android:id="@+id/unit_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:text="@string/unit_grams"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorDarkGray"/>

                </RelativeLayout>

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/ingredient_chip_group"
                style="@style/CustomChipColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/entry_left_margin"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp">

            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/entry_left_margin"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_milestone"
                    android:tint="@android:color/darker_gray"
                    android:contentDescription="@string/timeline_marker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/completion_date"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/end_date_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size"
                        tools:text="March 5, 2019" />

                </LinearLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/notes_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="96dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/entry_left_margin"
                android:paddingEnd="@dimen/single_row_height"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:hint="@string/notes"
                android:inputType="textCapSentences"
                android:importantForAutofill="no"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cornerRadius="26dp"
            android:textAllCaps="false"
            android:text="@string/cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cornerRadius="26dp"
            android:textAllCaps="false"
            android:text="@string/start" />

    </LinearLayout>

</RelativeLayout>