<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/create_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/create_brew"
                android:textColor="#de000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/create_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_text_view"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="@string/brew_name"
                android:inputType="textCapWords"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="32sp"
                tools:text="Wisteria Blue" />

            <View
                android:id="@+id/pip1"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_below="@+id/create_edit_text"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tl_pips" />

            <View
                android:id="@+id/pip2"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_below="@+id/pip1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/tl_pips" />

            <androidx.cardview.widget.CardView
                android:id="@+id/primary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pip2"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="24dp">

                    <RelativeLayout
                        android:id="@+id/primary_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@color/cardHeader"
                        android:paddingStart="20dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/primary_label"
                            style="@style/LabelTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/first_fermentation" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/primary_label"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/primary_date_calendar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/MainTextStyle"
                                tools:text="Mar 1 â€“ Mar 12" />

                            <TextView
                                android:id="@+id/primary_remaining_days"
                                style="@style/LabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                tools:text="11 days" />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/tea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/primary_date"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/tea_name_autocomplete"
                            style="@style/MainTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/tea_name"
                            android:inputType="textCapWords"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            tools:text="Blue Mountain" />

                        <Spinner
                            android:id="@+id/tea_picker"
                            style="@style/LabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="16dp"
                            android:spinnerMode="dialog"
                            android:background="@null"
                            tools:listitem="@layout/spinner_item_small" />

                        <EditText
                            android:id="@+id/tea_amount_picker"
                            style="@style/LabelTextStyle"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/default_amount_tea"
                            android:inputType="number"
                            android:maxLength="3"
                            android:selectAllOnFocus="true"
                            android:textAlignment="textEnd"
                            android:textColorHint="@color/colorDarkGray" />

                        <TextView
                            android:id="@+id/unit_suffix1"
                            style="@style/LabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/unit_grams" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/primary_sugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tea"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/primary_sugar_picker"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:background="@null"
                            tools:listitem="@layout/spinner_item" />

                        <EditText
                            android:id="@+id/sugar_amount_picker"
                            style="@style/LabelTextStyle"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/default_amount_sweetener"
                            android:inputType="number"
                            android:maxLength="3"
                            android:selectAllOnFocus="true"
                            android:textAlignment="textEnd"
                            android:textColorHint="@color/colorDarkGray" />

                        <TextView
                            android:id="@+id/unit_suffix2"
                            style="@style/LabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/unit_grams" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/primary_sugar"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MainTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/water" />


                        <EditText
                            android:id="@+id/water_amount_picker"
                            style="@style/LabelTextStyle"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/default_amount_water"
                            android:inputType="numberDecimal"
                            android:maxLength="4"
                            android:selectAllOnFocus="true"
                            android:textAlignment="textEnd"
                            android:textColorHint="@color/colorDarkGray" />

                        <TextView
                            android:id="@+id/unit_suffix4"
                            style="@style/LabelTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/unit_liters" />

                    </LinearLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/pip3"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_below="@+id/primary_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/tl_pips" />

            <View
                android:id="@+id/pip4"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_below="@+id/pip3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/tl_pips" />

            <androidx.cardview.widget.CardView
                android:id="@+id/secondary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pip4"
                android:layout_marginTop="8dp"
                android:elevation="28dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="24dp">

                    <RelativeLayout
                        android:id="@+id/secondary_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@color/cardHeader"
                        android:paddingStart="20dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/secondary_label"
                            style="@style/LabelTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/second_fermentation" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/secondary_label"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/secondary_date_calendar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                style="@style/MainTextStyle"
                                tools:text="Mar 12 â€“ Mar 15" />

                            <TextView
                                android:id="@+id/secondary_remaining_days"
                                style="@style/LabelTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                tools:text="3 days" />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/secondary_sugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/secondary_date"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/secondary_sugar_picker"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:background="@null"
                            tools:listitem="@layout/spinner_item"/>

                        <EditText
                            android:id="@+id/secondary_sugar_amount_picker"
                            style="@style/LabelTextStyle"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="3"
                            android:selectAllOnFocus="true"
                            android:textAlignment="textEnd"
                            android:textColorHint="@color/colorDarkGray" />

                        <TextView
                            android:id="@+id/unit_suffix3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/unit_grams"
                            style="@style/LabelTextStyle" />

                    </LinearLayout>

                    <!--<TextView-->
                        <!--android:id="@+id/ingredient_label"-->
                        <!--style="@style/MainTextStyle"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/secondary_sugar"-->
                        <!--android:layout_marginHorizontal="@dimen/card_margin_horizontal"-->
                        <!--android:layout_marginTop="7dp"-->
                        <!--android:text="@string/flavors" />-->

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ingredient_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/secondary_sugar"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        app:chipSpacing="8dp" />

                    <TextView
                        android:id="@+id/add_ingredient_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/ingredient_chip_group"
                        android:text="@string/add_ingredient"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_label"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/end_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add_ingredient_edit_text"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        style="@style/LabelTextStyle"
                        android:text="@string/completion_date" />

                    <TextView
                        android:id="@+id/end_date_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/end_label"
                        android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                        style="@style/MainTextStyle"
                        tools:text="Mar 15" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondary_card"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:backgroundTint="@android:color/transparent"
                android:minLines="2"
                style="@style/MainTextStyle"
                android:textColorHint="@color/colorDarkGray"
                android:hint="@string/notes"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="80dp"
                android:layout_below="@+id/notes"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/google_sans_medium"
                app:backgroundTint="@color/colorDarkGray"
                app:cornerRadius="8dp" />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>